extends layout

block content
    #chat-login-wrapper.container.row.center-align
        .col.l6.offset-l3.s12
            h1 Welcome to RefineMe!
            form#chat-signup
                input#user_name(type='text', placeholder='enter your name', autofocus='')
                input#session_token(type='text', value=session_token, name='session_token', placeholder='enter your session token')
                .row
                    input#submit_button(type='button', value='Join session').waves-effect.waves-light.btn.col.l6.s12
                    input#create_button(type='button', value='Create new session').waves-effect.waves-light.btn.col.l6.s12
            // end of chat-signup form
        // end of chat-login-wrapper
    script(src='/javascripts/login.js')