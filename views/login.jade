extends layout

block content
    .login.mdl-layout.mdl-js-layout.mdl-color--grey-100
        main.login.mdl-layout__content
            .mdl-card-wide.mdl-card.mdl-shadow--6dp
                .mdl-card__title.mdl-color--primary.mdl-color-text--white
                    h2.mdl-card__title-text Welcome to RefineMe!
                .mdl-card__supporting-text
                    form.mdl-grid
                        .mdl-cell--12-col.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                            input#user_name.mdl-textfield__input(type='text', autofocus='')
                            label.mdl-textfield__label(for='user_name') First Name
                        .mdl-cell--12-col.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                            input#room_name.mdl-textfield__input(type='text')
                            label.mdl-textfield__label(for='room_name') Room name
                .mdl-card__actions.mdl-card--border
                    .mdl-grid
                        button#submit_button.mdl-button--colored.mdl-button--raised.mdl-cell.mdl-cell--6-col-desktop.mdl-cell--12-col-phone.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='button') Join session
                        button#create_button.mdl-cell.mdl-cell--6-col-desktop.mdl-cell--12-col-phone.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='button') Create new session

    script(src='/build/login.bundle.js')