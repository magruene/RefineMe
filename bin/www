#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('RefineMe:server');
var http = require('http');
var mongo = require('mongodb').MongoClient;


/**
 * DEV only
 */
require('dotenv').load();

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '5000');

app.set('port', port);
/**
 * Create HTTP server.
 */

var server = http.createServer(app);
var io = require('socket.io')(server);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, function () {
    console.log("Express server listening on port " + port)
});
server.on('error', onError);
server.on('listening', onListening);

var MONGO_USER = process.env.MONGO_USER || "admin",
    MONGO_PW = process.env.MONGO_PW || "admin",
    MONGO_BASE_URL = process.env.MONGO_BASE_URL || "ds019478.mlab.com:19478/refineme";


mongo.connect('mongodb://' + MONGO_USER + ':' + MONGO_PW + '@' + MONGO_BASE_URL, function (err, db) {
    if (err) throw err;

    console.log("Server started successfully!");

    io.on('connection', function (socket) {
        var userName;
        console.log('a user connected');

        var join = require("./socketHandler/join.js");
        socket.on('join', function (data) {
            join(socket, db, data);
        });

        var createRoom = require("./socketHandler/createRoom.js");
        socket.on('create_room', function(data) {
            createRoom(socket, db, data);
        });

        var roomConnection = require("./socketHandler/roomConnection.js");
        socket.on('room-connection', function (data) {
            roomConnection(io, socket, db, data);
        });

        socket.on('leave-room', function (data) {
            var rooms = db.collection('rooms');

            rooms.find({
                'room_name': data.room_name
            }).toArray(function (err, res) {
                if (err) throw err;
                var room = res[0];
                var index = room.users.indexOf(data.user_name);
                if (index > -1) {
                    room.users.splice(index, 1);
                }

                rooms.update({room_name: room.room_name}, {
                    $set: {
                        users: room.users
                    }
                }, function () {
                    socket.emit('redirect', 'login');
                    socket.broadcast.to(data.room_name).emit('update-view', room);
                });
            });
            console.log('user disconnected');
        });

        socket.on('disconnect', function () {
            console.log('user ' + userName + ' disconnected');
        });
    });
});

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    var bind = typeof port === 'string'
        ? 'Pipe ' + port
        : 'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string'
        ? 'pipe ' + addr
        : 'port ' + addr.port;
    debug('Listening on ' + bind);
}
